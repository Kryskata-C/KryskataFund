@{
    ViewData["Title"] = "Following";
    var followedFunds = ViewBag.FollowedFunds as List<KryskataFund.Models.Fund>;
    var followCount = (int)ViewBag.FollowCount;
}

<div class="my-page">
    <div class="my-page-header">
        <div class="my-page-title">
            <h1>Following</h1>
            <p>Campaigns you're keeping an eye on</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn-primary">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            Discover More
        </a>
    </div>

    <div class="my-stats-row">
        <div class="my-stat-card my-stat-card--yellow">
            <span class="my-stat-value">@followCount</span>
            <span class="my-stat-label">Following</span>
        </div>
    </div>

    @if (followedFunds == null || followedFunds.Count == 0)
    {
        <div class="my-empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="64" height="64">
                    <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                </svg>
            </div>
            <h3>No followed campaigns yet</h3>
            <p>Bookmark campaigns you're interested in to keep track of their progress!</p>
            <a asp-controller="Home" asp-action="Index" class="btn-primary">Explore Campaigns</a>
        </div>
    }
    else
    {
        <div class="my-funds-grid">
            @foreach (var fund in followedFunds)
            {
                <div class="my-fund-card-wrapper">
                    <a asp-controller="Funds" asp-action="Details" asp-route-id="@fund.Id" class="my-fund-card">
                        <div class="my-fund-image" style="background-image: url('@(fund.ImageUrl ?? "/images/placeholder.jpg")');">
                            <span class="my-fund-category" style="background: @fund.CategoryColor;">@fund.Category</span>
                            @if (fund.IsVerified)
                            {
                                <span class="verified-badge">
                                    <svg viewBox="0 0 24 24" fill="currentColor" width="14" height="14">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                                    </svg>
                                    Verified
                                </span>
                            }
                        </div>
                        <div class="my-fund-content">
                            <h3>@fund.Title</h3>
                            <div class="my-fund-progress">
                                <div class="progress-bar-bg">
                                    <div class="progress-bar-fill" style="width: @fund.ProgressPercent%"></div>
                                </div>
                                <div class="progress-info">
                                    <span class="progress-amount">$@fund.RaisedAmount.ToString("N0") raised</span>
                                    <span class="progress-percent">@fund.ProgressPercent%</span>
                                </div>
                            </div>
                            <div class="my-fund-meta">
                                <span>@fund.SupportersCount supporters</span>
                                <span>@fund.DaysLeft days left</span>
                            </div>
                        </div>
                    </a>
                    <button class="unfollow-btn" onclick="toggleFollow(@fund.Id, this)" title="Unfollow">
                        <svg viewBox="0 0 24 24" fill="currentColor" width="20" height="20">
                            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                        </svg>
                    </button>
                </div>
            }
        </div>
    }
</div>

<style>
    .my-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 30px;
    }

    .my-page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .my-page-title h1 {
        font-size: 28px;
        font-weight: 800;
        color: #fff;
        margin: 0;
    }

    .my-page-title p {
        color: var(--text-muted);
        margin: 5px 0 0;
    }

    .my-stats-row {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
    }

    .my-stat-card {
        flex: 1;
        max-width: 200px;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        padding: 25px;
        text-align: center;
    }

    .my-stat-card--yellow {
        background: rgba(250, 204, 21, 0.1);
        border-color: rgba(250, 204, 21, 0.2);
    }

    .my-stat-value {
        display: block;
        font-size: 32px;
        font-weight: 800;
        color: #fff;
    }

    .my-stat-card--yellow .my-stat-value {
        color: #facc15;
    }

    .my-stat-label {
        display: block;
        font-size: 14px;
        color: var(--text-muted);
        margin-top: 5px;
    }

    .my-empty-state {
        text-align: center;
        padding: 80px 20px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px dashed rgba(255, 255, 255, 0.1);
        border-radius: 20px;
    }

    .empty-icon {
        color: var(--text-muted);
        margin-bottom: 20px;
    }

    .my-empty-state h3 {
        font-size: 20px;
        color: #fff;
        margin: 0 0 10px;
    }

    .my-empty-state p {
        color: var(--text-muted);
        margin: 0 0 25px;
    }

    .my-funds-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
    }

    .my-fund-card-wrapper {
        position: relative;
    }

    .my-fund-card {
        display: block;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        overflow: hidden;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .my-fund-card:hover {
        transform: translateY(-4px);
        border-color: rgba(250, 204, 21, 0.3);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .my-fund-image {
        height: 160px;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .my-fund-category {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        color: #000;
    }

    .verified-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 5px 10px;
        background: rgba(59, 130, 246, 0.9);
        border-radius: 20px;
        font-size: 11px;
        font-weight: 600;
        color: #fff;
    }

    .my-fund-content {
        padding: 20px;
    }

    .my-fund-content h3 {
        font-size: 18px;
        font-weight: 600;
        color: #fff;
        margin: 0 0 15px;
    }

    .my-fund-progress {
        margin-bottom: 15px;
    }

    .progress-bar-bg {
        height: 6px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #4ade80, #22d3ee);
        border-radius: 3px;
    }

    .progress-info {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
    }

    .progress-amount {
        color: #4ade80;
        font-weight: 600;
    }

    .progress-percent {
        color: var(--text-muted);
    }

    .my-fund-meta {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
        color: var(--text-muted);
    }

    .unfollow-btn {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(250, 204, 21, 0.9);
        border: none;
        border-radius: 50%;
        color: #000;
        cursor: pointer;
        transition: all 0.2s ease;
        z-index: 10;
    }

    .unfollow-btn:hover {
        transform: scale(1.1);
        background: #facc15;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: linear-gradient(135deg, #4ade80, #22d3ee);
        border: none;
        border-radius: 12px;
        color: #000;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(74, 222, 128, 0.3);
    }
</style>

<script>
    async function toggleFollow(fundId, button) {
        try {
            const response = await fetch('/Account/ToggleFollow', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: 'fundId=' + fundId
            });
            const data = await response.json();
            if (data.success && !data.isFollowing) {
                button.closest('.my-fund-card-wrapper').remove();
                // Update count
                const countEl = document.querySelector('.my-stat-value');
                if (countEl) {
                    const newCount = parseInt(countEl.textContent) - 1;
                    countEl.textContent = newCount;
                    if (newCount === 0) {
                        location.reload();
                    }
                }
            }
        } catch (e) {
            console.error('Error toggling follow:', e);
        }
    }
</script>
