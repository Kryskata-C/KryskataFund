@{
    ViewData["Title"] = "My Funds";
    var myFunds = ViewBag.MyFunds as List<KryskataFund.Models.Fund>;
    var totalRaised = (decimal)ViewBag.TotalRaised;
    var totalSupporters = (int)ViewBag.TotalSupporters;
}

<div class="my-page">
    <div class="my-page-header">
        <div class="my-page-title">
            <h1>My Funds</h1>
            <p>Campaigns you've created</p>
        </div>
        <a asp-controller="Funds" asp-action="Create" class="btn-primary">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Create New Fund
        </a>
    </div>

    <div class="my-stats-row">
        <div class="my-stat-card">
            <span class="my-stat-value">@myFunds?.Count</span>
            <span class="my-stat-label">Campaigns</span>
        </div>
        <div class="my-stat-card my-stat-card--green">
            <span class="my-stat-value">$@totalRaised.ToString("N0")</span>
            <span class="my-stat-label">Total Raised</span>
        </div>
        <div class="my-stat-card">
            <span class="my-stat-value">@totalSupporters</span>
            <span class="my-stat-label">Total Supporters</span>
        </div>
    </div>

    @if (myFunds == null || myFunds.Count == 0)
    {
        <div class="my-empty-state">
            <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" width="64" height="64">
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                </svg>
            </div>
            <h3>No campaigns yet</h3>
            <p>Start your first fundraising campaign and make a difference!</p>
            <a asp-controller="Funds" asp-action="Create" class="btn-primary">Create Your First Fund</a>
        </div>
    }
    else
    {
        <div class="my-funds-grid">
            @foreach (var fund in myFunds)
            {
                <a asp-controller="Funds" asp-action="Details" asp-route-id="@fund.Id" class="my-fund-card">
                    <div class="my-fund-image" style="background-image: url('@(fund.ImageUrl ?? "/images/placeholder.jpg")');">
                        <span class="my-fund-category" style="background: @fund.CategoryColor;">@fund.Category</span>
                    </div>
                    <div class="my-fund-content">
                        <h3>@fund.Title</h3>
                        <div class="my-fund-progress">
                            <div class="progress-bar-bg">
                                <div class="progress-bar-fill" style="width: @fund.ProgressPercent%"></div>
                            </div>
                            <div class="progress-info">
                                <span class="progress-amount">$@fund.RaisedAmount.ToString("N0") raised</span>
                                <span class="progress-percent">@fund.ProgressPercent%</span>
                            </div>
                        </div>
                        <div class="my-fund-meta">
                            <span>@fund.SupportersCount supporters</span>
                            <span>@fund.DaysLeft days left</span>
                        </div>
                    </div>
                </a>
            }
        </div>
    }
</div>

<style>
    .my-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 30px;
    }

    .my-page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .my-page-title h1 {
        font-size: 28px;
        font-weight: 800;
        color: #fff;
        margin: 0;
    }

    .my-page-title p {
        color: var(--text-muted);
        margin: 5px 0 0;
    }

    .my-stats-row {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
    }

    .my-stat-card {
        flex: 1;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        padding: 25px;
        text-align: center;
    }

    .my-stat-card--green {
        background: rgba(74, 222, 128, 0.1);
        border-color: rgba(74, 222, 128, 0.2);
    }

    .my-stat-value {
        display: block;
        font-size: 32px;
        font-weight: 800;
        color: #fff;
    }

    .my-stat-card--green .my-stat-value {
        color: #4ade80;
    }

    .my-stat-label {
        display: block;
        font-size: 14px;
        color: var(--text-muted);
        margin-top: 5px;
    }

    .my-empty-state {
        text-align: center;
        padding: 80px 20px;
        background: rgba(255, 255, 255, 0.02);
        border: 1px dashed rgba(255, 255, 255, 0.1);
        border-radius: 20px;
    }

    .empty-icon {
        color: var(--text-muted);
        margin-bottom: 20px;
    }

    .my-empty-state h3 {
        font-size: 20px;
        color: #fff;
        margin: 0 0 10px;
    }

    .my-empty-state p {
        color: var(--text-muted);
        margin: 0 0 25px;
    }

    .my-funds-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 25px;
    }

    .my-fund-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.06);
        border-radius: 16px;
        overflow: hidden;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .my-fund-card:hover {
        transform: translateY(-4px);
        border-color: rgba(74, 222, 128, 0.3);
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .my-fund-image {
        height: 160px;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .my-fund-category {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        color: #000;
    }

    .my-fund-content {
        padding: 20px;
    }

    .my-fund-content h3 {
        font-size: 18px;
        font-weight: 600;
        color: #fff;
        margin: 0 0 15px;
    }

    .my-fund-progress {
        margin-bottom: 15px;
    }

    .progress-bar-bg {
        height: 6px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 3px;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .progress-bar-fill {
        height: 100%;
        background: linear-gradient(90deg, #4ade80, #22d3ee);
        border-radius: 3px;
    }

    .progress-info {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
    }

    .progress-amount {
        color: #4ade80;
        font-weight: 600;
    }

    .progress-percent {
        color: var(--text-muted);
    }

    .my-fund-meta {
        display: flex;
        justify-content: space-between;
        font-size: 13px;
        color: var(--text-muted);
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: linear-gradient(135deg, #4ade80, #22d3ee);
        border: none;
        border-radius: 12px;
        color: #000;
        font-size: 14px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(74, 222, 128, 0.3);
    }
</style>
