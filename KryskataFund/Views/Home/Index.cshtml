@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const activityFeed = document.getElementById('activityFeed');
            const todaysImpactEl = document.getElementById('todaysImpact');
            const avgSupportEl = document.getElementById('avgSupport');

            let lastActivityHash = '';
            let isFirstLoad = true;

            // Function to truncate text
            function truncate(str, max) {
                return str.length > max ? str.substring(0, max) + '...' : str;
            }

            // Create a hash of activities to detect changes
            function getActivityHash(activities) {
                return activities.map(a => `${a.type}-${a.timeAgo}-${a.fundTitle || ''}`).join('|');
            }

            // Function to render activity feed
            function renderActivity(activities, forceRender = false) {
                if (!activities || activities.length === 0) {
                    activityFeed.innerHTML = '<div class="feed-empty">No activity yet. Be the first to donate!</div>';
                    lastActivityHash = '';
                    return;
                }

                const newHash = getActivityHash(activities);

                // Don't re-render if nothing changed
                if (newHash === lastActivityHash && !forceRender) {
                    return;
                }

                const hadPreviousActivities = lastActivityHash !== '';
                const isNewActivity = hadPreviousActivities && newHash !== lastActivityHash;

                let html = '';
                activities.forEach((activity, index) => {
                    // Only animate the first item if there's genuinely new activity
                    const shouldAnimate = isNewActivity && index === 0 && !isFirstLoad;

                    if (activity.type === 'donation') {
                        html += `
                            <div class="feed-row${shouldAnimate ? ' new-activity' : ''}">
                                <span class="feed-pill feed-pill--donation">Donation</span>
                                <span class="feed-text"><span class="feed-amount">‚Ç¨${activity.amount}</span> to "${truncate(activity.fundTitle, 20)}"</span>
                                <span class="feed-time">‚Ä¢ ${activity.timeAgo}</span>
                            </div>
                        `;
                    } else if (activity.type === 'new_fund') {
                        html += `
                            <div class="feed-row${shouldAnimate ? ' new-activity' : ''}">
                                <span class="feed-pill feed-pill--fund">New fund</span>
                                <span class="feed-text">${activity.creatorName} launched "${truncate(activity.fundTitle, 18)}"</span>
                                <span class="feed-time">‚Ä¢ ${activity.timeAgo}</span>
                            </div>
                        `;
                    } else if (activity.type === 'milestone') {
                        html += `
                            <div class="feed-row${shouldAnimate ? ' new-activity' : ''}">
                                <span class="feed-pill feed-pill--milestone">Milestone</span>
                                <span class="feed-text">"${truncate(activity.fundTitle, 18)}" hit ${activity.percent}%!</span>
                                <span class="feed-time">‚Ä¢ ${activity.timeAgo}</span>
                            </div>
                        `;
                    }
                });

                activityFeed.innerHTML = html;
                lastActivityHash = newHash;
                isFirstLoad = false;
            }

            // Function to update stats
            function updateStats(stats) {
                const newImpact = '‚Ç¨' + stats.todaysImpact.toLocaleString();
                const newAvg = '‚Ç¨' + stats.avgSupport.toLocaleString();

                if (todaysImpactEl.textContent !== newImpact) {
                    todaysImpactEl.textContent = newImpact;
                    todaysImpactEl.classList.add('stat-update');
                    setTimeout(() => todaysImpactEl.classList.remove('stat-update'), 500);
                }

                if (avgSupportEl.textContent !== newAvg) {
                    avgSupportEl.textContent = newAvg;
                    avgSupportEl.classList.add('stat-update');
                    setTimeout(() => avgSupportEl.classList.remove('stat-update'), 500);
                }
            }

            // Fetch activity feed
            async function fetchActivity() {
                try {
                    const response = await fetch('/Home/GetRecentActivity');
                    const activities = await response.json();
                    renderActivity(activities);
                } catch (error) {
                    console.error('Error fetching activity:', error);
                }
            }

            // Fetch live stats
            async function fetchStats() {
                try {
                    const response = await fetch('/Home/GetLiveStats');
                    const stats = await response.json();
                    updateStats(stats);
                } catch (error) {
                    console.error('Error fetching stats:', error);
                }
            }

            // Initial fetch
            fetchActivity();

            // Poll every 5 seconds for real-time updates
            setInterval(fetchActivity, 5000);
            setInterval(fetchStats, 5000);
        });

        // Toggle follow function
        async function toggleFollow(event, fundId, button) {
            event.preventDefault();
            event.stopPropagation();

            const isSignedIn = @(isSignedIn ? "true" : "false");
            if (!isSignedIn) {
                window.location.href = '/Account/SignIn?returnUrl=' + encodeURIComponent(window.location.pathname);
                return;
            }

            try {
                const response = await fetch('/Account/ToggleFollow', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: 'fundId=' + fundId
                });
                const data = await response.json();

                if (data.success) {
                    const svg = button.querySelector('svg');
                    if (data.isFollowing) {
                        button.classList.add('following', 'just-followed');
                        button.title = 'Unfollow';
                        svg.setAttribute('fill', 'currentColor');
                        setTimeout(() => button.classList.remove('just-followed'), 500);
                    } else {
                        button.classList.remove('following');
                        button.title = 'Follow';
                        svg.setAttribute('fill', 'none');
                    }
                }
            } catch (e) {
                console.error('Error toggling follow:', e);
            }
        }
    </script>
}
