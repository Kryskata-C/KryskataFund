@model List<KryskataFund.Models.Fund>
@{
    ViewData["Title"] = "KryskataFund ‚Äì Home";
    var categoryCounts = ViewBag.CategoryCounts as Dictionary<string, int> ?? new Dictionary<string, int>();
    var totalCount = ViewBag.TotalCount ?? 0;
    var selectedCategory = ViewBag.SelectedCategory as string;
    var totalRaised = ViewBag.TotalRaised ?? 0m;
    var liveCampaigns = ViewBag.LiveCampaigns ?? 0;
    var todaysImpact = ViewBag.TodaysImpact ?? 0m;
    var avgSupport = ViewBag.AvgSupport ?? 0m;
    var topCategory = ViewBag.TopCategory as string ?? "None";
    var followedFundIds = ViewBag.FollowedFundIds as List<int> ?? new List<int>();
    var isSignedIn = Context.Session.GetString("IsSignedIn") == "true";

    // Define all possible categories
    var allCategories = new[] { "Education", "Health", "Animals", "Creative", "Dreams", "Just for fun", "Technology", "Community" };
}

<style>
    :root {
        --bg-main: #050509;
        --bg-elevated: #0f1017;
        --bg-elevated-soft: #141522;
        --bg-chip: #1c1d2b;
        --accent: #46e6a4;
        --accent-soft: rgba(70, 230, 164, 0.18);
        --accent-strong: #27c385;
        --accent-danger: #ff4976;
        --accent-warning: #ffb547;
        --accent-info: #4da8ff;
        --text-main: #f7f7ff;
        --text-muted: #a0a3c4;
        --text-softer: #6d6f8c;
        --border-subtle: #222437;
        --radius-xl: 24px;
        --radius-lg: 18px;
        --radius-pill: 999px;
        --shadow-soft: 0 28px 80px rgba(0, 0, 0, 0.7);
        --shadow-card: 0 16px 40px rgba(0, 0, 0, 0.7);
        --blur-heavy: blur(52px);
        --transition-fast: 0.2s ease-out;
        --transition-med: 0.35s ease-out;
    }

    /* Reset-ish */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: radial-gradient(circle at top, #181826 0, #050509 45%) fixed;
        color: var(--text-main);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    .page-root {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background: transparent;
        position: relative;
        overflow: hidden;
    }

    /* Animated background blobs */
    .page-root::before,
    .page-root::after {
        content: "";
        position: fixed;
        inset: -200px;
        background:
            radial-gradient(circle at 10% 20%, rgba(56, 189, 248, 0.06) 0, transparent 40%),
            radial-gradient(circle at 80% 10%, rgba(94, 234, 212, 0.03) 0, transparent 45%),
            radial-gradient(circle at 20% 90%, rgba(248, 113, 113, 0.04) 0, transparent 45%);
        opacity: 0.7;
        filter: blur(2px);
        z-index: -2;
        animation: bgFloat 28s ease-in-out infinite alternate;
    }

    .page-root::after {
        animation-duration: 36s;
        animation-delay: -6s;
        opacity: 0.55;
    }

    @@keyframes bgFloat {
        0% {
            transform: translate3d(0, 0, 0) scale(1);
        }
        50% {
            transform: translate3d(0, -25px, 0) scale(1.04);
        }
        100% {
            transform: translate3d(0, 18px, 0) scale(1.02);
        }
    }

    .page-shell {
        max-width: 1240px;
        margin: 0 auto;
        padding: 28px 20px 64px;
    }

    /* Top nav - Modern glassmorphism */
    .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
        position: sticky;
        top: 12px;
        z-index: 20;
        padding: 8px 12px;
        border-radius: 20px;
        backdrop-filter: blur(20px) saturate(180%);
        background: rgba(10, 12, 20, 0.6);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow:
            0 8px 32px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
        animation: navSlideDown 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes navSlideDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .nav-left,
    .nav-right {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .brand-badge {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 8px 16px;
        border-radius: 14px;
        border: none;
        background: linear-gradient(135deg, rgba(70, 230, 164, 0.15) 0%, rgba(56, 189, 248, 0.1) 100%);
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        cursor: pointer;
    }

    .brand-badge:hover {
        background: linear-gradient(135deg, rgba(70, 230, 164, 0.25) 0%, rgba(56, 189, 248, 0.2) 100%);
        transform: scale(1.02);
    }

    .brand-icon {
        width: 32px;
        height: 32px;
        border-radius: 10px;
        background: linear-gradient(135deg, #46e6a4, #4da8ff);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
        animation: iconPulse 3s ease-in-out infinite;
    }

    @@keyframes iconPulse {
        0%, 100% { box-shadow: 0 0 0 0 rgba(70, 230, 164, 0.4); }
        50% { box-shadow: 0 0 20px 5px rgba(70, 230, 164, 0.2); }
    }

    .brand-icon::after {
        content: "K";
        font-size: 18px;
        font-weight: 800;
        color: #050509;
    }

    .brand-text-main {
        font-weight: 600;
        letter-spacing: -0.01em;
        font-size: 16px;
        background: linear-gradient(135deg, #fff, #a0a3c4);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .brand-text-sub {
        display: none;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 4px;
        font-size: 14px;
        color: var(--text-muted);
        background: rgba(255, 255, 255, 0.03);
        padding: 4px;
        border-radius: 12px;
    }

    .nav-link {
        padding: 8px 16px;
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.25s cubic-bezier(0.16, 1, 0.3, 1);
        font-weight: 500;
    }

    .nav-link::before {
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(70, 230, 164, 0.2), rgba(56, 189, 248, 0.15));
        opacity: 0;
        transition: opacity 0.25s ease;
        border-radius: inherit;
    }

    .nav-link:hover {
        color: var(--text-main);
        transform: translateY(-1px);
    }

    .nav-link:hover::before {
        opacity: 1;
    }

    .nav-link--active {
        background: linear-gradient(135deg, rgba(70, 230, 164, 0.2), rgba(56, 189, 248, 0.15));
        color: var(--text-main);
        box-shadow: 0 0 20px rgba(70, 230, 164, 0.3);
    }

    .nav-tag {
        font-size: 10px;
        color: #050509;
        background: linear-gradient(135deg, #46e6a4, #4da8ff);
        padding: 3px 8px;
        border-radius: 6px;
        font-weight: 600;
        margin-left: 6px;
    }

    .nav-cta {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .nav-pill {
        padding: 8px 14px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.05);
        border: none;
        font-size: 13px;
        color: var(--text-muted);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 500;
    }

    .nav-pill-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: #22c55e;
        box-shadow: 0 0 10px rgba(34, 197, 94, 0.8);
    }

    .btn-primary,
    .btn-ghost {
        border-radius: 12px;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
        white-space: nowrap;
        position: relative;
        overflow: hidden;
    }

    .btn-primary {
        background: linear-gradient(135deg, #46e6a4 0%, #22d3ee 50%, #4da8ff 100%);
        background-size: 200% 200%;
        color: #050509;
        box-shadow:
            0 4px 15px rgba(70, 230, 164, 0.4),
            0 0 0 0 rgba(70, 230, 164, 0);
        animation: gradientShift 4s ease infinite;
    }

    @@keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .btn-primary::before {
        content: "";
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .btn-primary:hover {
        transform: translateY(-2px) scale(1.02);
        box-shadow:
            0 8px 25px rgba(70, 230, 164, 0.5),
            0 0 30px rgba(70, 230, 164, 0.3);
    }

    .btn-primary:hover::before {
        left: 100%;
    }

    .btn-primary:active {
        transform: translateY(0) scale(0.98);
    }

    .btn-ghost {
        background: rgba(255, 255, 255, 0.05);
        color: var(--text-main);
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .btn-ghost::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(70, 230, 164, 0.1), rgba(56, 189, 248, 0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: inherit;
    }

    .btn-ghost:hover {
        border-color: rgba(70, 230, 164, 0.3);
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .btn-ghost:hover::before {
        opacity: 1;
    }

    /* Layout: hero + sidebar */
    .main-grid {
        display: grid;
        grid-template-columns: minmax(0, 2.1fr) minmax(0, 1.2fr);
        gap: 26px;
        margin-top: 12px;
    }

    @@media (max-width: 1024px) {
        .nav {
            flex-wrap: wrap;
            gap: 12px;
        }

        .nav-links {
            display: none;
        }

        .main-grid {
            grid-template-columns: minmax(0, 1fr);
        }
    }

    @@media (max-width: 720px) {
        .page-shell {
            padding-inline: 14px;
        }

        .nav {
            padding-inline: 12px;
        }
    }

    /* Hero card */
    .hero-card {
        border-radius: 28px;
        background: rgba(12, 14, 25, 0.4);
        padding: 32px;
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow:
            0 4px 40px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        position: relative;
        overflow: hidden;
        isolation: isolate;
        min-height: 320px;
        animation: heroFadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    @@keyframes heroFadeIn {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.98);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .hero-card::before {
        content: "";
        position: absolute;
        inset: -50%;
        background:
            radial-gradient(circle at 0% 0%, rgba(70, 230, 164, 0.15) 0, transparent 50%),
            radial-gradient(circle at 100% 0%, rgba(56, 189, 248, 0.12) 0, transparent 50%),
            radial-gradient(circle at 50% 100%, rgba(168, 85, 247, 0.1) 0, transparent 50%);
        filter: blur(40px);
        animation: heroGlow 8s ease-in-out infinite;
        opacity: 0.9;
        z-index: -2;
        animation: heroGlow 16s ease-in-out infinite alternate;
    }

    @@keyframes heroGlow {
        0% {
            transform: translate3d(0, 0, 0) scale(1);
        }
        100% {
            transform: translate3d(-20px, 6px, 0) scale(1.05);
        }
    }

    .hero-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 18px;
        margin-bottom: 20px;
    }

    .hero-tagline {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 8px 16px;
        border-radius: 12px;
        background: rgba(70, 230, 164, 0.1);
        border: 1px solid rgba(70, 230, 164, 0.2);
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--accent);
        font-weight: 600;
        animation: taglineSlide 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
    }

    @@keyframes taglineSlide {
        from {
            opacity: 0;
            transform: translateX(-20px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .hero-tag-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: var(--accent);
        box-shadow: 0 0 14px rgba(70, 230, 164, 0.8);
        animation: dotPulse 2s ease-in-out infinite;
    }

    @@keyframes dotPulse {
        0%, 100% { transform: scale(1); opacity: 1; }
        50% { transform: scale(1.2); opacity: 0.8; }
    }

    .hero-tag-pill {
        padding: 2px 7px;
        border-radius: 999px;
        background: rgba(70, 230, 164, 0.16);
        color: #bfffe3;
    }

    .hero-mood-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 5px 10px;
        border-radius: var(--radius-pill);
        background: rgba(6, 8, 18, 0.8);
        border: 1px solid rgba(120, 122, 165, 0.6);
        font-size: 11px;
        color: var(--text-muted);
    }

    .hero-mood-pill span {
        padding: 2px 8px;
        border-radius: 999px;
        background: rgba(24, 26, 48, 0.95);
        color: var(--accent);
    }

    .hero-body {
        max-width: 540px;
    }

    .hero-title {
        font-size: clamp(32px, 4vw + 8px, 48px);
        line-height: 1.1;
        margin-bottom: 16px;
        letter-spacing: -0.03em;
        font-weight: 700;
        animation: titleReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.3s both;
    }

    @@keyframes titleReveal {
        from {
            opacity: 0;
            transform: translateY(20px);
            filter: blur(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
            filter: blur(0);
        }
    }

    .hero-highlight {
        background: linear-gradient(135deg, #46e6a4, #22d3ee, #4da8ff, #a855f7);
        background-size: 300% 300%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        animation: highlightShift 6s ease infinite;
    }

    @@keyframes highlightShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .hero-subtitle {
        font-size: 15px;
        color: var(--text-muted);
        line-height: 1.7;
        margin-bottom: 20px;
        animation: subtitleFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.5s both;
    }

    @@keyframes subtitleFade {
        from {
            opacity: 0;
            transform: translateY(15px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero-subtitle-strong {
        color: var(--accent);
        font-weight: 500;
    }

    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 16px;
    }

    .hero-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 18px;
        font-size: 11px;
        color: var(--text-softer);
    }

    .hero-meta-block {
        display: inline-flex;
        gap: 6px;
        align-items: center;
        padding: 6px 10px;
        border-radius: var(--radius-pill);
        border: 1px solid rgba(51, 54, 95, 0.85);
        background: rgba(4, 5, 12, 0.9);
    }

    .meta-label {
        color: var(--text-softer);
    }

    .meta-value {
        color: var(--text-main);
        font-weight: 500;
    }

    .meta-pill-badge {
        padding: 2px 8px;
        border-radius: 999px;
        background: rgba(34, 197, 94, 0.15);
        color: #bbf7d0;
        font-size: 10px;
    }

    .hero-visual {
        position: relative;
        min-width: 220px;
        display: flex;
        justify-content: flex-end;
    }

    .hero-card-mini {
        width: 210px;
        border-radius: 22px;
        padding: 14px 14px 14px;
        background: radial-gradient(circle at top, rgba(15, 23, 42, 1) 0, #020617 55%);
        border: 1px solid rgba(71, 85, 105, 0.9);
        box-shadow: 0 16px 40px rgba(15, 23, 42, 0.9);
        position: relative;
        overflow: hidden;
        animation: floatSoft 9s ease-in-out infinite alternate;
    }

    .hero-card-mini::before {
        content: "";
        position: absolute;
        inset: -30%;
        background:
            radial-gradient(circle at 0% 0%, rgba(34, 197, 94, 0.22) 0, transparent 50%),
            radial-gradient(circle at 100% 0%, rgba(56, 189, 248, 0.2) 0, transparent 60%);
        opacity: 0.8;
        z-index: -1;
    }

    @@keyframes floatSoft {
        0% {
            transform: translate3d(0, 0, 0);
        }
        100% {
            transform: translate3d(0, -10px, 0);
        }
    }

    .mini-title {
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .mini-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 10px;
        color: #e0f2fe;
        padding: 4px 7px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(56, 189, 248, 0.4);
        margin-bottom: 10px;
    }

    .mini-badge-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
        background: #4ade80;
        box-shadow: 0 0 10px rgba(74, 222, 128, 0.9);
    }

    .mini-progress-labels {
        display: flex;
        justify-content: space-between;
        font-size: 10px;
        color: #cbd5f5;
        margin-bottom: 6px;
    }

    .mini-progress-bar {
        position: relative;
        height: 8px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.9);
        overflow: hidden;
    }

    .mini-progress-fill {
        position: absolute;
        inset: 0;
        width: var(--progress, 72%);
        background: linear-gradient(90deg, #22c55e, #4ade80, #facc15);
        border-radius: inherit;
        box-shadow: 0 0 12px rgba(74, 222, 128, 0.85);
        animation: progressGrow 1.4s cubic-bezier(0.16, 0.9, 0.36, 1) forwards;
        transform-origin: left center;
    }

    @@keyframes progressGrow {
        0% {
            transform: scaleX(0);
        }
        100% {
            transform: scaleX(1);
        }
    }

    .mini-progress-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 6px;
        font-size: 10px;
        color: #cbd5f5;
    }

    .mini-avatar-row {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .mini-avatars {
        display: inline-flex;
    }

    .mini-avatar {
        width: 20px;
        height: 20px;
        border-radius: 999px;
        border: 2px solid rgba(15, 23, 42, 1);
        background: linear-gradient(135deg, #f97316, #fb7185);
        display: inline-block;
        box-shadow: 0 0 8px rgba(248, 113, 113, 0.6);
        margin-left: -6px;
    }

    .mini-avatar:nth-child(2) {
        background: linear-gradient(135deg, #4f46e5, #22d3ee);
    }

    .mini-avatar:nth-child(3) {
        background: linear-gradient(135deg, #22c55e, #a3e635);
    }

    .mini-avatar:first-child {
        margin-left: 0;
    }

    .mini-avatar-count {
        font-size: 10px;
        color: #e5e7eb;
        margin-left: 8px;
    }

    .mini-footer-chip {
        margin-left: auto;
        padding: 3px 8px;
        border-radius: 999px;
        font-size: 10px;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(148, 163, 184, 0.7);
        color: #e2e8f0;
    }

    .hero-scroll-indicator {
        position: absolute;
        bottom: 14px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 11px;
        color: var(--text-softer);
        display: flex;
        align-items: center;
        gap: 6px;
        opacity: 0.8;
    }

    .scroll-dot {
        width: 14px;
        height: 22px;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.8);
        position: relative;
        overflow: hidden;
    }

    .scroll-dot-inner {
        width: 4px;
        height: 6px;
        border-radius: 999px;
        background: rgba(148, 163, 184, 0.9);
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        animation: scrollDot 1.4s ease-in-out infinite;
    }

    @@keyframes scrollDot {
        0% {
            top: 4px;
            opacity: 0;
        }
        40% {
            top: 6px;
            opacity: 1;
        }
        100% {
            top: 14px;
            opacity: 0;
        }
    }

    /* Sidebar: stats + mini feed */
    .sidebar-card {
        border-radius: 26px;
        background: rgba(5, 6, 14, 0.96);
        padding: 16px 18px 18px;
        border: 1px solid rgba(36, 38, 70, 0.9);
        box-shadow: var(--shadow-card);
        display: flex;
        flex-direction: column;
        gap: 16px;
        position: relative;
        overflow: hidden;
    }

    .sidebar-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at top right, rgba(70, 230, 164, 0.08) 0, transparent 60%);
        opacity: 0.8;
        pointer-events: none;
    }

    .sidebar-header {
        display: flex;
