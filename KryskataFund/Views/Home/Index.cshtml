@{
    ViewData["Title"] = "KryskataFund – Home";
}

<style>
    :root {
        --bg-main: #050509;
        --bg-elevated: #0f1017;
        --bg-elevated-soft: #141522;
        --bg-chip: #1c1d2b;
        --accent: #46e6a4;
        --accent-soft: rgba(70, 230, 164, 0.18);
        --accent-strong: #27c385;
        --accent-danger: #ff4976;
        --accent-warning: #ffb547;
        --accent-info: #4da8ff;
        --text-main: #f7f7ff;
        --text-muted: #a0a3c4;
        --text-softer: #6d6f8c;
        --border-subtle: #222437;
        --radius-xl: 24px;
        --radius-lg: 18px;
        --radius-pill: 999px;
        --shadow-soft: 0 28px 80px rgba(0, 0, 0, 0.7);
        --shadow-card: 0 16px 40px rgba(0, 0, 0, 0.7);
        --blur-heavy: blur(52px);
        --transition-fast: 0.2s ease-out;
        --transition-med: 0.35s ease-out;
    }

    /* Reset-ish */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background: radial-gradient(circle at top, #181826 0, #050509 45%) fixed;
        color: var(--text-main);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    .page-root {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background:
            radial-gradient(circle at 0% 0%, rgba(94, 234, 212, 0.15) 0, transparent 55%),
            radial-gradient(circle at 100% 0%, rgba(56, 189, 248, 0.16) 0, transparent 55%),
            radial-gradient(circle at 0% 100%, rgba(244, 114, 182, 0.14) 0, transparent 55%);
        position: relative;
        overflow: hidden;
    }

    /* Animated background blobs */
    .page-root::before,
    .page-root::after {
        content: "";
        position: fixed;
        inset: -200px;
        background:
            radial-gradient(circle at 10% 20%, rgba(56, 189, 248, 0.06) 0, transparent 40%),
            radial-gradient(circle at 80% 10%, rgba(94, 234, 212, 0.03) 0, transparent 45%),
            radial-gradient(circle at 20% 90%, rgba(248, 113, 113, 0.04) 0, transparent 45%);
        opacity: 0.7;
        filter: blur(2px);
        z-index: -2;
        animation: bgFloat 28s ease-in-out infinite alternate;
    }

    .page-root::after {
        animation-duration: 36s;
        animation-delay: -6s;
        opacity: 0.55;
    }

    @@keyframes bgFloat {
        0% {
            transform: translate3d(0, 0, 0) scale(1);
        }
        50% {
            transform: translate3d(0, -25px, 0) scale(1.04);
        }
        100% {
            transform: translate3d(0, 18px, 0) scale(1.02);
        }
    }

    .page-shell {
        max-width: 1240px;
        margin: 0 auto;
        padding: 28px 20px 64px;
    }

    /* Top nav */
    .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 32px;
        position: sticky;
        top: 0;
        z-index: 20;
        padding: 10px 18px;
        border-radius: var(--radius-pill);
        backdrop-filter: blur(16px);
        background: radial-gradient(circle at top left, rgba(70, 230, 164, 0.12), transparent 60%),
        rgba(5, 5, 13, 0.92);
        border: 1px solid rgba(120, 122, 165, 0.35);
        box-shadow: 0 18px 48px rgba(0, 0, 0, 0.85);
    }

    .nav-left,
    .nav-right {
        display: flex;
        align-items: center;
        gap: 18px;
    }

    .brand-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 14px;
        border-radius: var(--radius-pill);
        border: 1px solid rgba(120, 122, 165, 0.55);
        background: radial-gradient(circle at top left, rgba(70, 230, 164, 0.18), transparent 60%),
        rgba(9, 10, 20, 0.95);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.85);
    }

    .brand-icon {
        width: 26px;
        height: 26px;
        border-radius: 10px;
        background: conic-gradient(from 140deg, #46e6a4, #4da8ff, #ffb547, #ff4976, #46e6a4);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .brand-icon::after {
        content: "K";
        font-size: 16px;
        font-weight: 800;
        color: #050509;
        text-shadow: 0 0 12px rgba(5, 5, 9, 0.9);
    }

    .brand-text-main {
        font-weight: 700;
        letter-spacing: 0.04em;
        font-size: 15px;
        text-transform: uppercase;
    }

    .brand-text-sub {
        font-size: 11px;
        color: var(--text-muted);
        letter-spacing: 0.12em;
        text-transform: uppercase;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 14px;
        font-size: 13px;
        color: var(--text-muted);
    }

    .nav-link {
        padding: 6px 10px;
        border-radius: var(--radius-pill);
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: background var(--transition-fast), color 0.15s ease-out, transform 0.15s ease-out;
    }

    .nav-link:hover {
        color: var(--text-main);
        background: rgba(36, 38, 70, 0.9);
        transform: translateY(-1px);
    }

    .nav-link--active {
        background: linear-gradient(135deg, rgba(70, 230, 164, 0.2), rgba(77, 168, 255, 0.18));
        color: var(--text-main);
        border: 1px solid rgba(70, 230, 164, 0.7);
        box-shadow: 0 0 16px rgba(70, 230, 164, 0.4);
    }

    .nav-tag {
        font-size: 11px;
        color: var(--accent);
        background: rgba(70, 230, 164, 0.12);
        padding: 3px 7px;
        border-radius: 999px;
    }

    .nav-cta {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .nav-pill {
        padding: 6px 11px;
        border-radius: var(--radius-pill);
        background: rgba(12, 13, 24, 0.96);
        border: 1px solid rgba(68, 70, 110, 0.8);
        font-size: 12px;
        color: var(--text-muted);
        display: inline-flex;
        align-items: center;
        gap: 7px;
    }

    .nav-pill-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: #22c55e;
        box-shadow: 0 0 10px rgba(34, 197, 94, 0.8);
    }

    .btn-primary,
    .btn-ghost {
        border-radius: var(--radius-pill);
        padding: 9px 18px;
        font-size: 13px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: transform var(--transition-fast), box-shadow var(--transition-fast), background var(--transition-fast), color var(--transition-fast), border var(--transition-fast);
        white-space: nowrap;
    }

    .btn-primary {
        background: linear-gradient(135deg, var(--accent-strong), #4da8ff);
        color: #050509;
        box-shadow: 0 14px 30px rgba(70, 230, 164, 0.55);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at 0 0, rgba(255, 255, 255, 0.4) 0, transparent 45%);
        opacity: 0;
        transition: opacity 0.2s ease-out;
    }

    .btn-primary:hover {
        transform: translateY(-1px) scale(1.01);
        box-shadow: 0 18px 40px rgba(70, 230, 164, 0.7);
    }

    .btn-primary:hover::before {
        opacity: 1;
    }

    .btn-ghost {
        background: transparent;
        color: var(--text-muted);
        border: 1px solid rgba(68, 70, 110, 0.85);
    }

    .btn-ghost:hover {
        background: rgba(24, 26, 45, 0.96);
        color: var(--text-main);
        transform: translateY(-1px);
    }

    /* Layout: hero + sidebar */
    .main-grid {
        display: grid;
        grid-template-columns: minmax(0, 2.1fr) minmax(0, 1.2fr);
        gap: 26px;
        margin-top: 12px;
    }

    @@media (max-width: 1024px) {
        .nav {
            flex-wrap: wrap;
            gap: 12px;
        }

        .nav-links {
            display: none;
        }

        .main-grid {
            grid-template-columns: minmax(0, 1fr);
        }
    }

    @@media (max-width: 720px) {
        .page-shell {
            padding-inline: 14px;
        }

        .nav {
            padding-inline: 12px;
        }
    }

    /* Hero card */
    .hero-card {
        border-radius: 32px;
        background: radial-gradient(circle at top left, rgba(70, 230, 164, 0.2) 0, rgba(10, 10, 20, 0.98) 55%);
        padding: 26px 26px 26px;
        border: 1px solid rgba(92, 228, 179, 0.42);
        box-shadow: var(--shadow-soft);
        position: relative;
        overflow: hidden;
        isolation: isolate;
        min-height: 320px;
    }

    .hero-card::before {
        content: "";
        position: absolute;
        inset: -40%;
        background:
            radial-gradient(circle at 0% 0%, rgba(74, 222, 128, 0.12) 0, transparent 55%),
            radial-gradient(circle at 90% 10%, rgba(56, 189, 248, 0.16) 0, transparent 55%),
            radial-gradient(circle at 20% 100%, rgba(244, 114, 182, 0.18) 0, transparent 60%);
        filter: blur(10px);
        opacity: 0.9;
        z-index: -2;
        animation: heroGlow 16s ease-in-out infinite alternate;
    }

    @@keyframes heroGlow {
        0% {
            transform: translate3d(0, 0, 0) scale(1);
        }
        100% {
            transform: translate3d(-20px, 6px, 0) scale(1.05);
        }
    }

    .hero-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 18px;
        margin-bottom: 20px;
    }

    .hero-tagline {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 5px 10px;
        border-radius: var(--radius-pill);
        background: rgba(5, 5, 12, 0.8);
        border: 1px solid rgba(70, 230, 164, 0.6);
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 0.16em;
        color: var(--accent);
    }

    .hero-tag-dot {
        width: 8px;
        height: 8px;
        border-radius: 999px;
        background: var(--accent);
        box-shadow: 0 0 14px rgba(70, 230, 164, 0.8);
    }

    .hero-tag-pill {
        padding: 2px 7px;
        border-radius: 999px;
        background: rgba(70, 230, 164, 0.16);
        color: #bfffe3;
    }

    .hero-mood-pill {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 5px 10px;
        border-radius: var(--radius-pill);
        background: rgba(6, 8, 18, 0.8);
        border: 1px solid rgba(120, 122, 165, 0.6);
        font-size: 11px;
        color: var(--text-muted);
    }

    .hero-mood-pill span {
        padding: 2px 8px;
        border-radius: 999px;
        background: rgba(24, 26, 48, 0.95);
        color: var(--accent);
    }

    .hero-body {
        max-width: 540px;
    }

    .hero-title {
        font-size: clamp(28px, 3vw + 8px, 40px);
        line-height: 1.05;
        margin-bottom: 14px;
        letter-spacing: -0.04em;
    }

    .hero-highlight {
        background: linear-gradient(120deg, #ffffff, #46e6a4, #4da8ff);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .hero-subtitle {
        font-size: 14px;
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 18px;
    }

    .hero-subtitle-strong {
        color: var(--accent);
        font-weight: 500;
    }

    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 16px;
    }

    .hero-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 18px;
        font-size: 11px;
        color: var(--text-softer);
    }

    .hero-meta-block {
        display: inline-flex;
        gap: 6px;
        align-items: center;
        padding: 6px 10px;
        border-radius: var(--radius-pill);
        border: 1px solid rgba(51, 54, 95, 0.85);
        background: rgba(4, 5, 12, 0.9);
    }

    .meta-label {
        color: var(--text-softer);
    }

    .meta-value {
        color: var(--text-main);
        font-weight: 500;
    }

    .meta-pill-badge {
        padding: 2px 8px;
        border-radius: 999px;
        background: rgba(34, 197, 94, 0.15);
        color: #bbf7d0;
        font-size: 10px;
    }

    .hero-visual {
        position: relative;
        min-width: 220px;
        display: flex;
        justify-content: flex-end;
    }

    .hero-card-mini {
        width: 210px;
        border-radius: 22px;
        padding: 14px 14px 14px;
        background: radial-gradient(circle at top, rgba(15, 23, 42, 1) 0, #020617 55%);
        border: 1px solid rgba(71, 85, 105, 0.9);
        box-shadow: 0 16px 40px rgba(15, 23, 42, 0.9);
        position: relative;
        overflow: hidden;
        animation: floatSoft 9s ease-in-out infinite alternate;
    }

    .hero-card-mini::before {
        content: "";
        position: absolute;
        inset: -30%;
        background:
            radial-gradient(circle at 0% 0%, rgba(34, 197, 94, 0.22) 0, transparent 50%),
            radial-gradient(circle at 100% 0%, rgba(56, 189, 248, 0.2) 0, transparent 60%);
        opacity: 0.8;
        z-index: -1;
    }

    @@keyframes floatSoft {
        0% {
            transform: translate3d(0, 0, 0);
        }
        100% {
            transform: translate3d(0, -10px, 0);
        }
    }

    .mini-title {
        font-size: 13px;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .mini-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 10px;
        color: #e0f2fe;
        padding: 4px 7px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(56, 189, 248, 0.4);
        margin-bottom: 10px;
    }

    .mini-badge-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
        background: #4ade80;
        box-shadow: 0 0 10px rgba(74, 222, 128, 0.9);
    }

    .mini-progress-labels {
        display: flex;
        justify-content: space-between;
        font-size: 10px;
        color: #cbd5f5;
        margin-bottom: 6px;
    }

    .mini-progress-bar {
        position: relative;
        height: 8px;
        border-radius: 999px;
        background: rgba(15, 23, 42, 0.9);
        overflow: hidden;
    }

    .mini-progress-fill {
        position: absolute;
        inset: 0;
        width: var(--progress, 72%);
        background: linear-gradient(90deg, #22c55e, #4ade80, #facc15);
        border-radius: inherit;
        box-shadow: 0 0 12px rgba(74, 222, 128, 0.85);
        animation: progressGrow 1.4s cubic-bezier(0.16, 0.9, 0.36, 1) forwards;
        transform-origin: left center;
    }

    @@keyframes progressGrow {
        0% {
            transform: scaleX(0);
        }
        100% {
            transform: scaleX(1);
        }
    }

    .mini-progress-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 6px;
        font-size: 10px;
        color: #cbd5f5;
    }

    .mini-avatar-row {
        display: flex;
        align-items: center;
        margin-top: 10px;
    }

    .mini-avatars {
        display: inline-flex;
    }

    .mini-avatar {
        width: 20px;
        height: 20px;
        border-radius: 999px;
        border: 2px solid rgba(15, 23, 42, 1);
        background: linear-gradient(135deg, #f97316, #fb7185);
        display: inline-block;
        box-shadow: 0 0 8px rgba(248, 113, 113, 0.6);
        margin-left: -6px;
    }

    .mini-avatar:nth-child(2) {
        background: linear-gradient(135deg, #4f46e5, #22d3ee);
    }

    .mini-avatar:nth-child(3) {
        background: linear-gradient(135deg, #22c55e, #a3e635);
    }

    .mini-avatar:first-child {
        margin-left: 0;
    }

    .mini-avatar-count {
        font-size: 10px;
        color: #e5e7eb;
        margin-left: 8px;
    }

    .mini-footer-chip {
        margin-left: auto;
        padding: 3px 8px;
        border-radius: 999px;
        font-size: 10px;
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid rgba(148, 163, 184, 0.7);
        color: #e2e8f0;
    }

    .hero-scroll-indicator {
        position: absolute;
        bottom: 14px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 11px;
        color: var(--text-softer);
        display: flex;
        align-items: center;
        gap: 6px;
        opacity: 0.8;
    }

    .scroll-dot {
        width: 14px;
        height: 22px;
        border-radius: 999px;
        border: 1px solid rgba(148, 163, 184, 0.8);
        position: relative;
        overflow: hidden;
    }

    .scroll-dot-inner {
        width: 4px;
        height: 6px;
        border-radius: 999px;
        background: rgba(148, 163, 184, 0.9);
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        animation: scrollDot 1.4s ease-in-out infinite;
    }

    @@keyframes scrollDot {
        0% {
            top: 4px;
            opacity: 0;
        }
        40% {
            top: 6px;
            opacity: 1;
        }
        100% {
            top: 14px;
            opacity: 0;
        }
    }

    /* Sidebar: stats + mini feed */
    .sidebar-card {
        border-radius: 26px;
        background: rgba(5, 6, 14, 0.96);
        padding: 16px 18px 18px;
        border: 1px solid rgba(36, 38, 70, 0.9);
        box-shadow: var(--shadow-card);
        display: flex;
        flex-direction: column;
        gap: 16px;
        position: relative;
        overflow: hidden;
    }

    .sidebar-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background: radial-gradient(circle at top right, rgba(70, 230, 164, 0.08) 0, transparent 60%);
        opacity: 0.8;
        pointer-events: none;
    }

    .sidebar-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 12px;
        position: relative;
        z-index: 1;
    }

    .sidebar-title-block h2 {
        font-size: 15px;
        letter-spacing: -0.02em;
        margin-bottom: 3px;
    }

    .sidebar-title-block span {
        font-size: 12px;
        color: var(--text-muted);
    }

    .sidebar-pill {
        padding: 4px 9px;
        border-radius: 999px;
        font-size: 11px;
        background: rgba(24, 26, 45, 0.95);
        border: 1px solid rgba(74, 222, 128, 0.45);
        color: #bbf7d0;
    }

    .sidebar-grid {
        display: grid;
        grid-template-columns: repeat(2, minmax(0, 1fr));
        gap: 10px;
        position: relative;
        z-index: 1;
    }

    .sidebar-stat-card {
        border-radius: 18px;
        padding: 10px 10px 10px;
        background: radial-gradient(circle at top left, rgba(30, 64, 175, 0.35) 0, rgba(15, 23, 42, 1) 55%);
        border: 1px solid rgba(129, 140, 248, 0.9);
        font-size: 11px;
        display: flex;
        flex-direction: column;
        gap: 4px;
        box-shadow: 0 14px 30px rgba(15, 23, 42, 0.9);
    }

    .sidebar-stat-card--green {
        background: radial-gradient(circle at top left, rgba(22, 163, 74, 0.4) 0, rgba(6, 95, 70, 1) 40%, rgba(6, 78, 59, 1) 65%);
        border-color: rgba(34, 197, 94, 0.9);
    }

    .sidebar-stat-label {
        color: #e2e8f0;
    }

    .sidebar-stat-value {
        font-size: 15px;
        font-weight: 600;
    }

    .sidebar-stat-sub {
        font-size: 10px;
        color: #cbd5f5;
    }

    .sidebar-pill-row {
        display: flex;
        gap: 6px;
        flex-wrap: wrap;
        font-size: 10px;
        position: relative;
        z-index: 1;
    }

    .chip {
        padding: 5px 9px;
        border-radius: 999px;
        border: 1px solid rgba(55, 65, 81, 0.85);
        background: rgba(15, 23, 42, 0.92);
        color: var(--text-softer);
    }

    .chip--accent {
        border-color: rgba(56, 189, 248, 0.9);
        color: #e0f2fe;
        background: linear-gradient(135deg, rgba(15, 23, 42, 1), rgba(30, 64, 175, 1));
    }

    .chip-dot {
        width: 7px;
        height: 7px;
        border-radius: 999px;
        background: #38bdf8;
        display: inline-block;
        margin-right: 4px;
        box-shadow: 0 0 12px rgba(56, 189, 248, 0.9);
    }

    .sidebar-feed {
        border-radius: 16px;
        padding: 10px;
        background: rgba(10, 12, 24, 0.98);
        border: 1px dashed rgba(63, 66, 110, 0.9);
        position: relative;
        z-index: 1;
        max-height: 180px;
        overflow: hidden;
    }

    .sidebar-feed-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 11px;
        color: var(--text-muted);
        margin-bottom: 4px;
    }

    .sidebar-feed-body {
        margin-top: 4px;
    }

    .feed-row {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 11px;
        color: #e5e7eb;
        padding: 4px 4px;
        border-radius: 999px;
        background: rgba(17, 24, 39, 0.98);
        margin-bottom: 4px;
        transform: translateX(0);
        animation: feedSlide 18s linear infinite;
    }

    .feed-row:nth-child(2) {
        animation-delay: -4s;
    }

    .feed-row:nth-child(3) {
        animation-delay: -8s;
    }

    @@keyframes feedSlide {
        0% {
            transform: translateX(0);
            opacity: 0.7;
        }
        10% {
            opacity: 1;
        }
        30% {
            transform: translateX(0);
            opacity: 1;
        }
        40% {
            transform: translateX(8px);
            opacity: 1;
        }
        45% {
            opacity: 0;
        }
        100% {
